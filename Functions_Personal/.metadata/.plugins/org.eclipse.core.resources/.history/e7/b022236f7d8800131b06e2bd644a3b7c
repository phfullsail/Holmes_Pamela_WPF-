//Miles driven to work each week

var milesWeekly = function(numDays, dayMiles) {
	var totalMiles = numDays * dayMiles;
	return totalMiles;
};

var weekMiles = milesWeekly(5,53);
console.log("You drive " + weekMiles + " miles each week.");

